<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        android:text="Escriba una frase:" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:padding="5dp"
        android:background="@drawable/borde_cuadrado"
        android:id="@+id/frase"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:id="@+id/opciones">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Archivo memoria INTERNA"
            android:textSize="20dp"
            android:id="@+id/interna"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Archivo memoria SD"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/externa"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del archivo:"
        android:layout_marginTop="20dp"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:padding="5dp"
        android:background="@drawable/borde_cuadrado"
        android:id="@+id/nombre"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:textSize="20dp"
            android:background="@drawable/bordes_redondos"
            android:id="@+id/guardar"/>

        <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Abrir"
            android:textSize="20dp"
            android:layout_gravity="right"
            android:background="@drawable/bordes_redondos"
            android:id="@+id/abrir"/>
    </GridLayout>

</LinearLayout>